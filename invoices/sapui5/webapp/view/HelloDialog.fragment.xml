<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="{i18n>helloText} {/recipient/name}">
        <content>
            <core:Icon src="sap-icon://hello-world"
                       size="4rem"/>
        </content>
        <beginButton>
            <Button text="{i18n>buttonOk}" 
                    press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition> 